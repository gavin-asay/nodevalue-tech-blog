<article class="single-post">
    <div class="article-banner">
        <h2>{{post.title}}</h2>
        <h3>Written by {{post.username}} on {{format_date post.created_at}}</h3>
    </div>
    <div class="article-body">
        {{{renderLinebreaks post.body}}}
    </div>
</article>

<div class="comment-wrapper">
    {{#if loggedIn}}
    <div class="comment-form">
        <h3>Add a Comment</h3>
        <p><em>Markdown supported</em></p>
        <textarea name="comment-text" class="comment-text"></textarea>
        <button type="submit" id="comment-submit" class="btn">Submit</button>
    </div>
    {{/if}}
    {{#each post.comments as |comment|}}
    {{> comment}}
    {{/each}}
</div>
{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}